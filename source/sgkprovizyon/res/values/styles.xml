<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="spn_blue_style" parent="@android:style/Widget.Spinner">
       <item name="android:background">@drawable/sel_spinner</item>
       <item name="android:padding">8dip</item>
   </style>
   
    
    <style name="btn_blue_style" parent="@android:style/Widget.Button">
       <item name="android:textSize">18sp</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/sel_button</item>
       <item name="android:padding">10dip</item>
   </style>
   
    
   <style name="edt_style" parent="@android:style/Widget.EditText">
       <item name="android:background">@drawable/sel_edittext</item>
       <item name="android:padding">10dip</item>
   </style>
   
   <style name="edt_result_style" parent="@android:style/Widget.EditText">
       <item name="android:background">@drawable/sel_editext_result</item>
       <item name="android:padding">10dip</item>
   </style>
   
   
   <style name="txt_style" parent="@android:style/Widget.TextView">
       <item name="android:background">@drawable/sel_txtview</item>
       <item name="android:padding">10dip</item>
   </style>
    
</resources>
